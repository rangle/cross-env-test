{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [ "es6" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "ts",
    "removeComments": false,
    "sourceMap": true
  },
  "exclude": [
    "coverage",
    "dist",
    "lib",
    "node_modules"
  ]
}
